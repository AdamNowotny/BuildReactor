{
    "name": "BuildReactor",
    "version": "4.0.0",
    "manifest_version": 3,
    "description": "Developer notifications and dashboard for CI servers",
    "icons": {
        "16": "img/icon-16.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "action": {
        "default_title": "BuildReactor",
        "default_icon": "img/icon-19.png",
        "default_popup": "src/dashboard/popup.html"
    },
    "background": {
        "service_worker": "service-worker.js",
        // "scripts": ["service-worker.js"], // Firefox
        "type": "module"
    },
    "homepage_url": "https://github.com/AdamNowotny/BuildReactor",
    "options_ui": {
        "page": "settings.html",
        "open_in_tab": true
    },
    "permissions": ["alarms", "notifications", "storage"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "web_accessible_resources": [
        {
            "resources": ["services/*/*.png", "services/*/*.svg"],
            "matches": ["<all_urls>"]
        }
    ]
}
