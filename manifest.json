{
	"name": "BuildReactor",
	"version": "0.9.1",
	"manifest_version": 2,
	"description": "Developer notifications and dashboard",
	"icons": {
		"16": "img/icon-16.png",
		"48": "img/icon-48.png",
		"128": "img/icon-128.png"
	},
	"browser_action": {
		"default_title": "BuildReactor",
		"default_icon": "img/icon-19.png",
		"default_popup": "src/popup/index.html"
	},
	"background": {
		"scripts": [
			"bower_components/requirejs/require.js",
			"src/common/main.js",
			"src/core/main.js"
		]
	},
	"homepage_url": "https://github.com/AdamNowotny/BuildReactor",
	"offline_enabled": false,
	"options_page": "src/settings/index.html",
	"permissions": [
		"http://*/*",
		"https://*/*",
		"notifications",
		"tabs"
	],
	"web_accessible_resources": [
		"src/core/services/bamboo/icon.png",
		"src/core/services/bamboo/logo.png",
		"src/core/services/buildbot/icon.png",
		"src/core/services/buildbot/logo.png",
		"src/core/services/cctray/icon.png",
		"src/core/services/cctray/logo.png",
		"src/core/services/cruisecontrol/icon.png",
		"src/core/services/cruisecontrol/logo.png",
		"src/core/services/cruisecontrol.net/icon.png",
		"src/core/services/cruisecontrol.net/logo.png",
		"src/core/services/cruisecontrol.rb/icon.png",
		"src/core/services/cruisecontrol.rb/logo.png",
		"src/core/services/go/icon.png",
		"src/core/services/go/logo.png",
		"src/core/services/jenkins/icon.png",
		"src/core/services/jenkins/logo.png",
		"src/core/services/snap/icon.png",
		"src/core/services/snap/logo.png",
		"src/core/services/teamcity/icon.png",
		"src/core/services/teamcity/logo.png",
		"src/core/services/travis/icon.png",
		"src/core/services/travis/logo.png"
	]
}
