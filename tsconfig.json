{
    "include": ["src/**/*", "test/**/*", "eslint.config.mjs", "vite.config.mts"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "lib": ["ES2023", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext"
    }
}
