{
    "include": ["src/**/*", "test/**/*", "eslint.config.mjs"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["ESNext", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "ESNext",
        "types": ["unplugin-icons/types/react", "chrome", "vite/client"]
    }
}
