{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*", "test/**/*", "vite.config.mts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["es2020", "DOM"],
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
  }
}
